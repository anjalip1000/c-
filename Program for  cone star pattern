#include<bits/stdc++.h>
using namespace std;
using namespace std;
int main()
{ int i=1,n;
cin >> n;
while(i<=n){
       int space =n-i;
       while(space){
              cout << " ";
              space=space-1;
       }
       int j=1;
       while(j<=i){
         
         cout << "*" <<" ";
         
           j=j+1;   
       }
       cout <<"\n";
       i=i+1;
}
       return 0; }

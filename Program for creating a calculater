#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main() {
      int a,b;
      std::cout << "Enter the value of a" << std::endl;
      std::cin >> a;
      cout<<"Enter the value of b"<<endl;
      cin>>b;
      char op;
      cout<<"Enter the operation you want to perform"<<endl;
      cout <<"oKKKK you want to perform addition"<<endl;
      cin>>op;
      switch(op){
             case '+':
             cout<<"The sum of a and b is "<<(a+b)<<endl;
             
             break;
             
             case '-':
             cout<<"The subtraction of a and b "<<(a-b)<<endl;
             break;
             default :
             cout<<"May be you do not want to perform any operation";
             break;
      }
	return 0;
}

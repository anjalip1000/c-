#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	int i,j,i1,j1,i2,j2,i3,j3,i4,j4,i5,j5,n,n1,n2,n3,n4,n5;
	cout << "how many lines you want to print" << "\n";
	std::cin >> n;
	for(i=5;i<=n;i++)
	{
	    for(j=0;j<=i;j++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	}
	cin >> n1;
		for(i1=4;i1<=n1;i1++)
	{
	    for(j1=0;j1<=i1;j1++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	}
	cin >> n2;
		for(i2=3;i2<=n2;i2++)
	{
	    for(j2=0;j2<=i2;j2++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	} 
	cin >> n3;
		for(i3=2;i3<=n3;i3++)
	{
	    for(j3=0;j3<=i3;j3++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	} 
		cin >> n4;
		for(i4=1;i4<=n4;i4++)
	{
	    for(j4=0;j4<=i4;j4  ++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	} 
		cin >> n5;
		for(i5=0;i5<=n5;i5++)
	{
	    for(j5=0;j5<=i5;j5++)
	    {
	        cout << "*";
	    }
	    
	    cout << "\n";
	} 




	return 0;
}

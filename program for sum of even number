#include<bits/stdc++.h>
using namespace std;
int main()
{
       int i=0,n,sum=0;
       cin >> n;
     while(i<=n){
            if(i%2==0){
                   cout << i << "\n";
                   sum=sum+i;
            }
            else{
                 continue;  
            }
            
            i=i+2;
     }
     cout<<"sum of even numbers is: "<< sum;
     
         return 0; 
}
